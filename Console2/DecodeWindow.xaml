<Window x:Class="Console2.DecodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DecodeWindow" Height="452" Width="443">
    <Grid>
        <TextBox Height="Auto" HorizontalAlignment="Stretch" Name="decode_textBox" VerticalAlignment="Stretch" Width="Auto" Margin="12,12,12,42" VerticalScrollBarVisibility="Auto" HorizontalContentAlignment="Stretch"/>
        <Button Content="Save" Height="23" HorizontalAlignment="Right" Margin="0,0,93,12" Name="save_button" VerticalAlignment="Bottom" Width="75" Click="save_button_Click" />
        <Button Content="Clear" Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="clear_button" VerticalAlignment="Bottom" Width="75" Click="clear_button_Click" />
    </Grid>
</Window>
